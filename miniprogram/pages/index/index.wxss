/* miniprogram/pages/index/index.wxss */
.index-swiper{margin: 20rpx;background: #967ef5;border-radius: 12rpx;height: 300rpx;overflow: hidden;margin-top: 100rpx;}

.index_tab{display: flex;}
.index_tab view{flex: 1;text-align: center;padding: 10rpx;margin: 10rpx;}
.index_tab view.active{border-bottom: 3px solid red;color: red;font-weight: 600;}
.slide-image{width: 100%;}

.index-list{display: flex;flex-wrap: wrap;color: #ff85b6;}
.index-list-item{width: 50%;margin: 10rpx 0;}
.index-list-item image{width: 90%;height: 250rpx;display: block;margin: 0 auto;}
.index-list-text{display: flex;justify-content: space-between;width: 90%;margin: 0 auto;}